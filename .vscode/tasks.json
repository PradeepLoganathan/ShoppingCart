{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build ShoppingCartApi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ShoppingCartApi/ShoppingCartApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
		{
            "label": "build ShoppingCartApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ShoppingCartApp/ShoppingCartApp.csproj"
            ],
            "problemMatcher": "$msCompile"
		},
        {
            "label": "build ShoppingCartWeb",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ShoppingCartWeb/ShoppingCartWeb.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
      
    ]
}