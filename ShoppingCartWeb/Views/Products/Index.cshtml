@model List<ShoppingCartWeb.Models.Product>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>  <!-- Add to Cart button column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <!-- Add to Cart button -->
                    <form method="post" asp-action="AddToCart" asp-route-id="@product.Id">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Cart" class="btn btn-success">View Cart</a>
